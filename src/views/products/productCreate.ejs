<!-- HEAD -->
<%- include('../partials/head.ejs') %>

<link rel="stylesheet" href="../css/login-register.css" />
<link rel="stylesheet" type="text/css" href="../css/productCreate.css" />


<!-- HEADER -->
<%- include('../partials/header.ejs') %>


<body>
 <main>
     <section>
           <form action="/productCreate" method="POST" enctype="multipart/form-data" class="createform">
             <div>
                 <h1>INGRESAR NUEVO PRODUCTO DB</h1>
                
             </div>
             
               <label for="title">Titulo</label>
               <input type="text" name="title" placeholder="Titulo del Libro" class="control">
               <label for="author">Autor</label>
               <input type="text" name="author" placeholder="Autor del Libro" class="control">
            

             <label for="genre">Género</label>
                <select name="genre" class="category">
                    <option value="Artisticos">Artisticos</option>
                    <option value="Consulta y referencia">Consulta y referencia</option>
                    <option value="Entretenimiento">Entretenimiento</option>
                    <option value="Infantiles">Infantiles</option>
                    <option value="Literatura">Literatura</option>
                    <option value="Recreativos">Recreativos</option>
                    <option value="Salud">Salud</option>
                    <option value="Otros">Otros</option>
                </select>
            

             <label for="description">Descripcion</label>
             <textarea name="description" id="description" placeholder="Inserte Descripción de Producto" class="control"></textarea> 

             <label for="descriptionD">Descripcion Detallada</label>
             <textarea name="descriptionD" id="descriptionDetallada" placeholder="Inserte Descripción detallada de Producto" class="control"></textarea> 

             <label for="imgTop">Ingresar Imagen de Tapa del Libro</label>
             <input type="file" name="imgTop" class="subir-archivo">

             <label for="imgTop">Ingresar Imagen de Contratapa del Libro</label>
             <input type="file" name="imgBack" class="subir-archivo">

             <label for="price">Precio</label>
             <input type="number" name="price" placeholder="Precio del Libro" class="control">

             <label for="discount">Descuento</label>
             <input type="number" name="discount" placeholder="% de Descuento" class="control">
          
             <div class="container-botones">
                <button type="submit" id="CrearProducto" class="btn btn-success">Agregar producto</button>
             </div>

          </form>
     </section>
</main>
</body>

<!-- FOOTER -->
<%- include('../partials/footer.ejs') %>
</html>
