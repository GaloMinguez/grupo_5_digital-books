<!-- HEAD -->
<%- include('../partials/head.ejs') %>

<link rel="stylesheet" href="../css/login-register.css" />
<link rel="stylesheet" type="text/css" href="../css/productCreate.css" />


<!-- HEADER -->
<%- include('../partials/header.ejs') %>


<body>
 <main>
     <section>
           <form action="/productEdit/<%= libro.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="createform">
             <div>
                 <h1>MODIFICAR PRODUCTO DB</h1>
                
             </div>
             
               <label for="title">Titulo</label>
               <input type="text" name="titulo-libro" placeholder="Titulo del Libro" class="control"  value=" <%= libro.title %>">
               <label for="author">Autor</label>
               <input type="text" name="autor-libro" placeholder="Autor del Libro" class="control" value=" <%= libro.author %>">
            

             <label for="genre">Género</label>
                <select name="categoria" class="category">
                   
                    <% if (libro.genre == "Artisticos") { %>
                      <option value="Artisticos" selected >Artisticos</option>
                      <option value="Consulta y referencia">Consulta y referencia</option>
                      <option value="Entretenimiento">Entretenimiento</option>
                      <option value="Infantiles">Infantiles</option>
                      <option value="Literatura">Literatura</option>
                      <option value="Recreativos">Recreativos</option>
                      <option value="Salud">Salud</option>
                      <option value="Otros">Otros</option>
                    <% } else if (libro.genre == "Consulta y referencia"){ %>
                      <option value="Artisticos"  >Artisticos</option>
                      <option value="Consulta y referencia" selected >Consulta y referencia</option>
                      <option value="Entretenimiento">Entretenimiento</option>
                      <option value="Infantiles">Infantiles</option>
                      <option value="Literatura">Literatura</option>
                      <option value="Recreativos">Recreativos</option>
                      <option value="Salud">Salud</option>
                      <option value="Otros">Otros</option>
                    <% } else if (libro.genre == "Entretenimiento"){ %>
                      <option value="Artisticos"  >Artisticos</option>
                      <option value="Consulta y referencia" >Consulta y referencia</option>
                      <option value="Entretenimiento"  selected >Entretenimiento</option>
                      <option value="Infantiles">Infantiles</option>
                      <option value="Literatura">Literatura</option>
                      <option value="Recreativos">Recreativos</option>
                      <option value="Salud">Salud</option>
                      <option value="Otros">Otros</option>
                      <% } else if (libro.genre == "Infantiles"){ %>
                        <option value="Artisticos"  >Artisticos</option>
                        <option value="Consulta y referencia" >Consulta y referencia</option>
                        <option value="Entretenimiento">Entretenimiento</option>
                        <option value="Infantiles"  selected>Infantiles</option>
                        <option value="Literatura">Literatura</option>
                        <option value="Recreativos">Recreativos</option>
                        <option value="Salud">Salud</option>
                        <option value="Otros">Otros</option>
                        <% } else if (libro.genre == "Literatura"){ %>
                          <option value="Artisticos"  >Artisticos</option>
                          <option value="Consulta y referencia" >Consulta y referencia</option>
                          <option value="Entretenimiento"  >Entretenimiento</option>
                          <option value="Infantiles">Infantiles</option>
                          <option value="Literatura"   selected>Literatura</option>
                          <option value="Recreativos">Recreativos</option>
                          <option value="Salud">Salud</option>
                          <option value="Otros">Otros</option>
                          <% } else if (libro.genre == "Recreativos"){ %>
                            <option value="Artisticos"  >Artisticos</option>
                            <option value="Consulta y referencia" >Consulta y referencia</option>
                            <option value="Entretenimiento" >Entretenimiento</option>
                            <option value="Infantiles">Infantiles</option>
                            <option value="Literatura">Literatura</option>
                            <option value="Recreativos" selected>Recreativos</option>
                            <option value="Salud">Salud</option>
                            <option value="Otros">Otros</option>
                            <% } else if (libro.genre == "Salud"){ %>
                              <option value="Artisticos"  >Artisticos</option>
                              <option value="Consulta y referencia" >Consulta y referencia</option>
                              <option value="Entretenimiento">Entretenimiento</option>
                              <option value="Infantiles">Infantiles</option>
                              <option value="Literatura">Literatura</option>
                              <option value="Recreativos">Recreativos</option>
                              <option value="Salud"selected >Salud</option>
                              <option value="Otros">Otros</option>
                              <% } else { %>
                                <option value="Artisticos">Artisticos</option>
                                <option value="Consulta y referencia" >Consulta y referencia</option>
                                <option value="Entretenimiento" >Entretenimiento</option>
                                <option value="Infantiles">Infantiles</option>
                                <option value="Literatura">Literatura</option>
                                <option value="Recreativos">Recreativos</option>
                                <option value="Salud">Salud</option>
                                <option value="Otros"selected>Otros</option>
                              <% } %>
                </select>
            

             <label for="description">Descripcion</label>
             <textarea name="description" id="description" placeholder="Inserte Descripción de Producto" class="control" >
              <%= libro.description %>
             </textarea> 

             <label for="descriptionD">Descripcion Detallada</label>
             <textarea name="descriptionD" id="descriptionDetallada" placeholder="Inserte Descripción detallada de Producto" class="control" >
              <%= libro.descriptionD %>
             </textarea> 

             <label for="imgTop">Ingresar Imagen de Tapa del Libro</label>
             <input type="file" name="imgTop" class="subir-archivo">

             <label for="imgBack">Ingresar Imagen de portada del Libro</label>
             <input type="file" name="imgBack" class="subir-archivo">

             <label for="price">Precio</label>
             <input type="number" name="precio" placeholder="Precio del Libro" class="control" value="<%= libro.price %>">

             <label for="discount">Descuento</label>
             <input type="number" name="discount" placeholder="% de Descuento" class="control" value="<%= libro.discount %>">
          
             <div class="container-botones">
                <button type="submit" id="Actualizar" class="btn btn-success">Actualizar producto</button>
             </div>

          </form>
     </section>
</main>
</body>

<!-- FOOTER -->
<%- include('../partials/footer.ejs') %>
</html>
