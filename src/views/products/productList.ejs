<!-- HEAD -->
<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="../css/productCart.css" />

    <body>
        <!-- HEADER -->
        <%- include('../partials/header.ejs') %>

            <section class="contenedor">
                <!-- Contenedor de elementos -->
                <div class="contenedor-items">
                    <% libros.forEach(libro=> { %>
                        <div class="item">
                            <span class="titulo-item">
                                <%= libro.title %>
                            </span>
                            <img src="img/<%= libro.imgTop %>" alt="<%= libro.alt %>" class="img-item">
                            <span class="precio-item">$<%= libro.price %><% if (libro.discount > 0) { %>
                                - <%= libro.discount %>% OFF
                                <% } %></span>

                            <a class="boton-item" href="products/<%= libro.id %>" target="">Ver Detalle</span></a>
                        </div>
                        <% }) %>
                </div>
            </section>
    </body>
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>

        </html>